#Makefile pour compilation du projet : PST
.PHONY: clean

#Compilateur
CC = gcc

#Nom de l'Executable
EXEC = Server

#Executable
all: $(EXEC)

#Construction de l'Ã©xecutable
$(EXEC): libCamera.o udp-talker.o
			$(CC) -o $(EXEC) libCamera.o udp-talker.o 

#Construction des fichiers objets
libCamera.o : libCamera/libCamera.c
				$(CC) -o libCamera.o -c libCamera/libCamera.c

udp-talker.o : srcServer/udp-talker.c
					$(CC) -o udp-talker.o -c srcServer/udp-talker.c

#Pour effacer les fichiers objets : appeler make clean
clean : 
		rm *.o 